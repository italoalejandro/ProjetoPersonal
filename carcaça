# Tipos corporais
tipos_corpo = {
    "ectomorfo": "magro",
    "mesomorfo": "atlético",
    "endomorfo": "obeso"
}

# Dicionário para armazenar informações do usuário
ficha = {}
exercicios = []

while True:
    print("\nEscolha uma opção:")
    print("1. Preencher informações")
    print("2. Adicionar exercício")
    print("3. Ver ficha de treinamento")
    print("4. Sair")

    opcao = input("Digite o número da opção escolhida: ")

    if opcao == "4":
        print("Saindo do programa.")
        break

    # Preencher informações
    if opcao == "1":
        tipo_corporal = input("Digite seu tipo corporal (ectomorfo, mesomorfo, endomorfo): ")
        if tipo_corporal in tipos_corpo:
            ficha['tipo_corporal'] = tipo_corporal
            print(f"Tipo corporal registrado: {tipo_corporal} ({tipos_corpo[tipo_corporal]})")
        else:
            print("Tipo corporal inválido.")

        peso = input("Digite seu peso: ")
        ficha['peso'] = peso

        altura = input("Digite sua altura: ")
        ficha['altura'] = altura

        objetivo = input("Digite seu objetivo: ")
        ficha['objetivo'] = objetivo

        print("Informações preenchidas com sucesso!")

    # Adicionar exercício
    elif opcao == "2":
        exercicio = input("Digite o nome do exercício: ")
        series = input("Digite o número de séries: ")
        repeticoes = input("Digite o número de repetições: ")
        exercicios.append({'exercicio': exercicio, 'series': series, 'repeticoes': repeticoes})
        print("Exercício adicionado com sucesso!")

    # Ver ficha de treinamento
    elif opcao == "3":
        if ficha:
            print("\nFicha de treinamento:")
            for chave, valor in ficha.items():
                print(f"{chave.capitalize()}: {valor}")
            print("\nExercícios:")
            if exercicios:
                for i, ex in enumerate(exercicios, start=1):
                    print(f"{i}. {ex['exercicio']} - {ex['series']} séries de {ex['repeticoes']} repetições")
            else:
                print("Nenhum exercício registrado ainda.")
        else:
            print("Nenhuma informação preenchida ainda.")
    else:
        print("Opção inválida. Tente novamente.")
